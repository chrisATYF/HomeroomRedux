@model HomeroomRedux.Models.Instructor
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center">
                <form action="@Url.RouteUrl("AboutInstructorPost", new { instructorId = Model.Id })" method="post">
                    @Html.HiddenFor(i => i.Id)
                    @Html.AntiForgeryToken()
                    @Html.LabelFor(a => a.AboutInstructor, new { @class = "mt-3 mb-5" })
                    @Html.TextAreaFor(a => a.AboutInstructor, new { @class = "form-control", @id = "aboutInstructorBox" })
                    <button class="btn btn-primary mt-5" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


