@model HomeroomRedux.Models.Submission
@{
    ViewBag.Title = "Submit";
}

<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-3"></div>
            <div class="col-md-3 text-center">
                <form action="@Url.RouteUrl("FileSubmitPost")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(i => i.Id)
                    <button class="btn btn-lg btn-primary" type="submit">Submit Files</button>
                </form>
            </div>
            <div class="col-md-3 text-center">
                <button class="btn btn-lg btn-success">Go Back</button>
            </div>
            <div class="offset-3"></div>
        </div>
    </div>
</div>

