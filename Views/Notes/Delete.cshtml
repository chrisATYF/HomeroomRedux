@model HomeroomRedux.Models.Note
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mt-5">
                <h6>Would you like to delete this note?</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form action="@Url.RouteUrl("DeleteNotePost")" class="form-control" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(i => i.CourseId)
                    <button class="btn btn-danger form-control">Yes, Delete</button>
                </form>
            </div>
            <div class="col-md-6">
                <a href="@Url.RouteUrl("NoteDetails", new { id = Model.Id })" class="btn btn-primary">Don't Delete</a>
            </div>
        </div>
    </div>
</div>

