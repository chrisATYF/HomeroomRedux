@model IEnumerable<HomeroomRedux.Models.Note>
@using Markdig
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                @foreach (var note in Model)
                {
                    <hr />
                    <a href="@Url.RouteUrl("NoteDetails", new { id = note.Id })">@note.Title</a>
                    <p>@Markdown.ToPlainText(note.NoteSummary)</p>
                    <hr />
                }
            </div>
        </div>
    </div>
</div>

