@model HomeroomRedux.Models.Course
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center">
                <h4 class="text-center">@Model.Name</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="lead">
                    Are you sure you want to delete this entire course? There is no going back
                    once you do.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center">
                <form action="@Url.RouteUrl("CourseDeletePost")" class="form-group" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(i => i.Id)
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="col-md-6 text-center">
                <a href="@Url.RouteUrl("InstructorDetails", new { id = Model.Id })" class="btn btn-primary">Go back</a>
            </div>
        </div>
    </div>
</div>

