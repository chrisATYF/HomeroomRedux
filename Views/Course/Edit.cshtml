@model HomeroomRedux.Models.Course
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="container-fluid">
        <h4 class="text-center mb-5">@Model.Name</h4>
        <div class="row">
            <div class="col-md-12">
                <form action="@Url.RouteUrl("CourseEditPost", new { id = Model.Id })" method="post" class="form-group">
                    @Html.HiddenFor(i => i.Id)
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 text-center">
                            @Html.LabelFor(n => n.Name)
                            @Html.TextBoxFor(n => n.Name, new { @class = "form-control mt-1" })
                        </div>
                        <div class="col-md-6 text-center">
                            @Html.LabelFor(n => n.Description)
                            @Html.TextBoxFor(n => n.Description, new { @class = "form-control mt-1" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 text-center">
                            @Html.LabelFor(a => a.AboutCourse)
                            @Html.TextAreaFor(a => a.AboutCourse, new { @class = "form-control mt-1", @id = "CourseCreateNonResize" })
                        </div>
                        <div class="col-md-6 text-center">
                            @Html.LabelFor(w => w.WhatYouLearn)
                            @Html.TextAreaFor(w => w.WhatYouLearn, new { @class = "form-control mt-1", @id = "CourseCreateNonResize" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center mt-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

