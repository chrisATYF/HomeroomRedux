@model HomeroomRedux.Models.Submission
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-3"></div>
            <div class="col-md-3 text-center">
                <form action="@Url.RouteUrl("FileDeletePost")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(i => i.Id)
                    <button class="btn btn-lg btn-primary" type="submit">Yes, Delete</button>
                </form>
            </div>
            <div class="col-md-3 text-center">
                <a href="@Url.RouteUrl("SubmissionDetails", new { submissionId = Model.Id })" class="btn btn-lg btn-success">Go Back</a>
            </div>
            <div class="offset-3"></div>
        </div>
    </div>
</div>
